type User {
    id: ID!
    name: String!
    email: String!
}

input NewUser {
    name: String!
    email: String!
}

input UpdateUser {
    name: String
    email: String
}

type Query {
    users: [User!]!
    userById (id: Int!): User!
}

type Mutation {
    createUser(input: NewUser!): User!
    updateUser(input: UpdateUser): User!
    deleteUser(id: Int!): Boolean
}